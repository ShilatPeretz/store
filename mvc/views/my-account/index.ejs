  <body>
    <!-- nav bar -->
    <div class="col-md-12">
      <div id="cssmenu">
        <div class="logo-box">My account</div>
        <ul>
          <li>
            <a href="/home-page" id="home">Home</a>
          </li>
          <li>
            <a id="details">Details</a>
          </li>
          <li>
            <a id="orders">Orders</a>
          </li>
        </ul>
      </div>
    </div>
    <!-- change account details -->
    <section class="section-details">
      <h1>Update account details</h1>
      <br />
      <h5>please enter your users information again</h5>
      <br />
      <form class="enterdetails">
        <div class="mb-3">
          <label class="form-label">User name</label>
          <input type="text" class="form-control username-input" />
          
          <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control password-input" />
          </div>
        </div>
        <button class="btn btn-primary">Change account details</button>
      </form>
      <form class="changedetails">
        <h5>Fill in the fields you want to change</h5>
        <div class="mb-3">
          <label class="form-label">User name</label>
          <input type="text" class="form-control username-input" disabled/>
          <div class="mb-3">
            <label class="form-label">Email address</label>
            <input type="email" class="form-control email-input" disabled />
          </div>
            <label class="form-label">Password</label>
            <input type="text" class="form-control password-input" disabled/>
          </div>
        </div>
        <button class="btn btn-primary">Save Changes</button>
      </form>
    </section>

    <!-- view User orders -->
    <section class="section-orders" style="display: none">
      <h1>Your orders : 18 orders</h1>
