<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="../../../public/CSS/my-account.css" rel="stylesheet" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <!-- bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <!-- bootstrap -->
    <title>my account page</title>
  </head>
  <body>
    <!-- nav bar -->
    <div class="col-md-12">
      <div id="cssmenu">
        <div class="logo-box">My account</div>
        <ul>
          <li>
            <a href="/home-page" id="home">Home</a>
          </li>
          <li>
            <a id="details">Details</a>
          </li>
          <li>
            <a id="orders">Orders</a>
          </li>
        </ul>
      </div>
    </div>
    <!-- change account details -->
    <section class="section-details">
      <h1>Update account details</h1>
      <br />
      <h5>please enter your users information again</h5>
      <br />
      <form class="enterdetails">
        <div class="mb-3">
          <label class="form-label">User name</label>
          <input type="text" class="form-control username-input" />
          
          <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control password-input" />
          </div>
        </div>
        <button class="btn btn-primary">Change account details</button>
      </form>
      <form class="changedetails">
        <h5>Fill in the fields you want to change</h5>
        <div class="mb-3">
          <label class="form-label">User name</label>
          <input type="text" class="form-control username-input" disabled/>
          <div class="mb-3">
            <label class="form-label">Email address</label>
            <input type="email" class="form-control email-input" disabled />
          </div>
            <label class="form-label">Password</label>
            <input type="text" class="form-control password-input" disabled/>
          </div>
        </div>
        <button class="btn btn-primary">Save Changes</button>
      </form>
    </section>

    <!-- view User orders -->
    <section class="section-orders" style="display: none">
      <h1>Your orders : <%= userOrders.length %> orders</h1>
      <!--cards -->
      <% for( let i = 0; i < userOrders.length; i++ ) { %>
        <div id="*fill-in-order-id*" class="card" style="width: 18rem">
          <div class="card-header">Order <%= i+1 %></div>
          <div class="card-body">
            <h5 class="card-title">Order Date: <%= userOrders[i].date.toLocaleDateString('en-GB') %></h5>
            <p class="card-text">Order Number: <%= userOrders[i]._id %></p>
            <p class="card-text">Price: <%= userOrders[i].price %> <%= userOrders[i].currency %></p>
            <a id="<%= userOrders[i]._id %>" href="#" class="btn btn-primary get-information">Get information</a>
          </div>
        </div>
        <% } %>
      </section>
      <!-- cards -->
      <section class="h-100 gradient-custom section-recipt" style="display: none;">
        <div class="remove-recipt"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
          <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
        </svg></div>
        <div class="container py-5 h-100">
          <div
            class="row d-flex justify-content-center align-items-center h-100"
          >
            <div class="col-lg-10 col-xl-8">
              <div class="card" style="border-radius: 10px">
                <div class="card-header px-4 py-5">
                  <h5 class="text-muted mb-0">
                    Thanks for your Order,
                    <span class="recipt-username" style="color: #a8729a"></span>!
                  </h5>
                </div>
                <div class="card-body p-4">
                  <div
                    class="d-flex justify-content-between align-items-center mb-4"
                  >
                    <p class="lead fw-normal mb-0" style="color: #a8729a">
                      Receipt
                    </p>
                    <p class="small text-muted mb-0 recipt-id">
                      Receipt Number : fgfh4g5h5b5hhf
                    </p>
                  </div>
                  <section class="products-section">
                    
                  </section>
                  

                  <div class="d-flex justify-content-between pt-2">
                    <p class="fw-bold mb-0">Order Details</p>
                    <p class="text-muted mb-0 " >
                      <span class="fw-bold me-4 recipt-total-price"></span> 
                    </p>
                  </div>
                  <div class="d-flex justify-content-between ">
                    <p class="text-muted mb-0 recipt-order-date"></p>
                  </div>

                  <div class="d-flex justify-content-between mb-5">
                    <p class="text-muted mb-0 recipt-user-email"></p>
                    <p class="text-muted mb-0">
                      <span class="fw-bold me-4">Delivery Charges</span> Free
                    </p>
                  </div>
                </div>
                <div
                  class="card-footer border-0 px-4 py-5"
                  style="
                    background-color: #a8729a;
                    border-bottom-left-radius: 10px;
                    border-bottom-right-radius: 10px;
                  "
                >
                  <h5
                    class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0"
                  >
                    Total paid: <span class="h2 mb-0 ms-2 recipt-total"></span>
                  </h5>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    
    <!-- scripts -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"
      integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://code.jquery.com/jquery-3.6.1.min.js"
      integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ="
      crossorigin="anonymous"
    ></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <script src="../../../public/JavaScript/my-account.js"></script>
  </body>
</html>
